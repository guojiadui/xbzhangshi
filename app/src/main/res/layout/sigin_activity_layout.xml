<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.xbzhangshi.view.ResizableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/qdbanner"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:background="#faca34"
                android:paddingTop="@dimen/dp_23">
                <TextView
                    android:id="@+id/up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上月"/>
                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下月"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_large"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:background="#faca34">
            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="#faca34"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_below="@+id/view1">
                    <TextView
                        android:id="@+id/continuity_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_size_large"
                        android:textColor="@color/black"
                        android:text="已经连续签到0天"/>
                    <TextView
                        android:id="@+id/back_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="返回首页"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:textSize="@dimen/font_size_large"
                        android:background="@drawable/btn_bg_red2"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_4"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_5"/>
                </RelativeLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_6"
                    android:background="@drawable/bg_rectangle_brownandyellow">
                    <TextView
                        android:id="@+id/sign"
                        android:layout_width="@dimen/dp_95"
                        android:layout_height="@dimen/dp_32"
                        android:text="马上签到"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/bg_rectangle_green"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_gray"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_40"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
