<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_12"
    android:paddingStart="@dimen/dp_12"
    android:paddingTop="@dimen/dp_12">

    <TextView
        android:id="@+id/lottery_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="彩票：类型派奖"
        android:textColor="#3d4145"
        android:textSize="@dimen/font_size_xlarge" />

    <TextView
        android:id="@+id/lottery_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号:L151151661616"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="#3d4145"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/sum_change_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变动前金额:54646元"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="#3d4145"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/change_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变动金额:54646元"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="#3d4145"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/sum_chage_late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变动后金额:54646元"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="#3d4145"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/change_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变动时间:54646元"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="#3d4145"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:text="备注"
        android:textColor="#3d4145"
        android:textSize="@dimen/font_size_large" />
</LinearLayout>
