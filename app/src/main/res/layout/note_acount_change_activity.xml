<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gray"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.classic.common.MultipleStatusView
            android:id="@+id/multipleStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyView="@layout/layout_empty"
            app:errorView="@layout/layout_error"
            app:loadingView="@layout/layout_loading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/smartRefreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_5">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="@drawable/bg_rectangle_white"></android.support.v7.widget.RecyclerView>

                    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srlClassicsSpinnerStyle="Translate"
                        app:srlDrawableArrow="@mipmap/loading_throbber"
                        app:srlDrawableArrowSize="20dp"
                        app:srlDrawableMarginRight="20dp"
                        app:srlDrawableProgressSize="20dp"
                        app:srlDrawableSize="20dp"
                        app:srlEnableLastTime="true"
                        app:srlFinishDuration="500"
                        app:srlTextSizeTime="10dp"
                        app:srlTextSizeTitle="16sp"
                        app:srlTextTimeMarginTop="2dp" />
                </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            </LinearLayout>

        </com.classic.common.MultipleStatusView>

        <LinearLayout
            android:id="@+id/query_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="开始"
                        android:textSize="@dimen/font_size_large" />

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingEnd="@dimen/dp_25"
                        android:paddingStart="@dimen/dp_25"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_large" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="截止"
                        android:textSize="@dimen/font_size_large" />

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingEnd="@dimen/dp_30"
                        android:paddingStart="@dimen/dp_30"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_large" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_gray" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="帐变类型"
                        android:textSize="@dimen/font_size_large" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/lottery_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dp_30"
                        android:paddingStart="@dimen/dp_30"
                        android:textSize="@dimen/font_size_large" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/btn_bg_red_selector"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_9"
                    android:paddingTop="@dimen/dp_9"
                    android:text="查询"
                    android:textColor="@color/white" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/kong"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></FrameLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
