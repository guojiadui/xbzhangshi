<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#efeff4"
              android:gravity="center"
              android:paddingBottom="@dimen/dp_12"
              android:paddingTop="@dimen/dp_12"
              android:text="提示信息"
              android:textSize="@dimen/font_size_large" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/dp_15"
              android:paddingEnd="@dimen/dp_12"
              android:paddingStart="@dimen/dp_12"
              android:paddingTop="@dimen/dp_15">

              <TextView
                  android:id="@+id/text_tip1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_size_large"/>

              <TextView
                  android:id="@+id/text_tip2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_size_large"/>

              <TextView
                  android:id="@+id/text_tip3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_size_large"/>

              <TextView
                  android:id="@+id/text_tip4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_size_large"/>
          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingBottom="@dimen/dp_12"
              android:paddingTop="@dimen/dp_12"
              android:text="消费信息"
              android:textSize="@dimen/font_size_large" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/dp_15"
              android:paddingEnd="@dimen/dp_12"
              android:paddingStart="@dimen/dp_12"
              android:paddingTop="@dimen/dp_15">

              <TextView
                  android:id="@+id/consumption_tip1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_size_large"/>

              <TextView
                  android:id="@+id/consumption_tip2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_size_large"/>
          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#efeff4"
              android:gravity="center"
              android:paddingBottom="@dimen/dp_12"
              android:paddingTop="@dimen/dp_12"
              android:text="提款信息"
              android:textSize="@dimen/font_size_large" />

          <LinearLayout
              android:id="@+id/commit_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:visibility="gone"
              android:orientation="vertical">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_42">

                  <ImageView
                      android:id="@+id/icon1"
                      android:layout_width="@dimen/dp_24"
                      android:layout_height="@dimen/dp_24"
                      android:layout_centerVertical="true"
                      android:src="@mipmap/blank_car_icon"
                      android:layout_marginStart="@dimen/dp_10"/>
                  <TextView
                      android:id="@+id/text1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:text="银  行  卡"
                      android:textSize="@dimen/font_size_large"
                      android:layout_toRightOf="@+id/icon1"
                      android:layout_marginStart="@dimen/dp_10"
                      />
                  <TextView
                      android:id="@+id/blank"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/text1"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="@dimen/dp_25"
                      android:textSize="@dimen/font_size_large"
                      />
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_1"
                      android:layout_toRightOf="@+id/icon1"
                      android:layout_alignParentBottom="true"
                      android:layout_marginStart="@dimen/dp_10"
                      android:background="@color/line_gray"/>
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_42">

                  <ImageView
                      android:id="@+id/icon2"
                      android:layout_width="@dimen/dp_24"
                      android:layout_height="@dimen/dp_24"
                      android:layout_centerVertical="true"
                      android:src="@mipmap/name_car_icon"
                      android:layout_marginStart="@dimen/dp_10"/>
                  <TextView
                      android:id="@+id/text2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:text="真实姓名"
                      android:textSize="@dimen/font_size_large"
                      android:layout_toRightOf="@+id/icon2"
                      android:layout_marginStart="@dimen/dp_10"
                      />
                  <TextView
                      android:id="@+id/name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/text2"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="@dimen/dp_25"
                      android:textSize="@dimen/font_size_large"
                      />
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_1"
                      android:layout_toRightOf="@+id/icon2"
                      android:layout_alignParentBottom="true"
                      android:layout_marginStart="@dimen/dp_10"
                      android:background="@color/line_gray"/>
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_42">

                  <ImageView
                      android:id="@+id/icon3"
                      android:layout_width="@dimen/dp_24"
                      android:layout_height="@dimen/dp_24"
                      android:layout_centerVertical="true"
                      android:src="@mipmap/money_icon"
                      android:layout_marginStart="@dimen/dp_10"/>
                  <TextView
                      android:id="@+id/text3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:text="账号余额"
                      android:textSize="@dimen/font_size_large"
                      android:layout_toRightOf="@+id/icon3"
                      android:layout_marginStart="@dimen/dp_10"
                      />
                  <TextView
                      android:id="@+id/balance"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/text3"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorPrimary"
                      android:layout_marginStart="@dimen/dp_25"
                      android:textSize="@dimen/font_size_large"
                      />
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_1"
                      android:layout_toRightOf="@+id/icon3"
                      android:layout_alignParentBottom="true"
                      android:layout_marginStart="@dimen/dp_10"
                      android:background="@color/line_gray"/>
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_42"
                  android:focusable="true"
                  android:focusableInTouchMode="true">

                  <ImageView
                      android:id="@+id/icon4"
                      android:layout_width="@dimen/dp_24"
                      android:layout_height="@dimen/dp_24"
                      android:layout_centerVertical="true"
                      android:src="@mipmap/monet_icon2"
                      android:layout_marginStart="@dimen/dp_10"/>
                  <TextView
                      android:id="@+id/text4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:text="账号金额"
                      android:textSize="@dimen/font_size_large"
                      android:layout_toRightOf="@+id/icon4"
                      android:layout_marginStart="@dimen/dp_10"
                      />
                  <EditText
                      android:id="@+id/amount_money"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/text4"
                      android:layout_centerVertical="true"
                      android:textSize="@dimen/font_size_large"
                      android:minWidth="@dimen/dp_180"
                      android:layout_marginStart="@dimen/dp_25"
                      android:background="@drawable/edit_bg_gray"
                      android:paddingStart="@dimen/dp_2"
                      android:paddingEnd="@dimen/dp_2"
                      android:paddingTop="@dimen/dp_1"
                      android:hint="最小提现100元"
                      android:inputType="number"
                      android:paddingBottom="@dimen/dp_1"
                      />
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_1"
                      android:layout_toRightOf="@+id/icon4"
                      android:layout_alignParentBottom="true"
                      android:layout_marginStart="@dimen/dp_10"
                      android:background="@color/line_gray"/>
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_42"
                  android:focusable="true"
                  android:focusableInTouchMode="true">

                  <ImageView
                      android:id="@+id/icon5"
                      android:layout_width="@dimen/dp_24"
                      android:layout_height="@dimen/dp_24"
                      android:layout_centerVertical="true"
                      android:src="@mipmap/lock_icon"
                      android:padding="@dimen/dp_2"
                      android:layout_marginStart="@dimen/dp_10"/>
                  <TextView
                      android:id="@+id/text5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:text="取款密码"
                      android:layout_toRightOf="@+id/icon5"
                      android:textSize="@dimen/font_size_large"
                      android:layout_marginStart="@dimen/dp_10"
                      />
                  <EditText
                      android:id="@+id/pwd"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/text5"
                      android:layout_centerVertical="true"
                      android:textSize="@dimen/font_size_large"
                      android:minWidth="@dimen/dp_180"
                      android:layout_marginStart="@dimen/dp_25"
                      android:background="@drawable/edit_bg_gray"
                      android:paddingStart="@dimen/dp_2"
                      android:paddingEnd="@dimen/dp_2"
                      android:inputType="textPassword"
                      android:paddingTop="@dimen/dp_1"
                      android:paddingBottom="@dimen/dp_1"
                      />
              </RelativeLayout>

          </LinearLayout>
          <TextView
              android:id="@+id/commit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/dp_15"
              android:layout_marginStart="@dimen/dp_15"
              android:layout_marginTop="@dimen/dp_30"
              android:layout_marginBottom="@dimen/dp_30"
              android:background="@drawable/btn_bg_red_selector"
              android:gravity="center"
              android:paddingBottom="@dimen/dp_10"
              android:paddingTop="@dimen/dp_10"
              android:text="申请提款"
              android:textColor="@color/white"
              android:textSize="@dimen/font_size_large" />
      </LinearLayout>
  </ScrollView>
</LinearLayout>
