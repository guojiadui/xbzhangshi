<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu"
    android:background="#222426"
    android:orientation="vertical">



<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:text="个人中心"
    android:textSize="@dimen/font_size_large"
    android:background="@color/black"
    android:layout_gravity="center"
    android:paddingTop="@dimen/dp_12"
    android:gravity="center"
    android:paddingBottom="@dimen/dp_12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#393939"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">
          <ImageView
              android:id="@+id/sideslip_user_icon"
              android:layout_width="@dimen/dp_42"
              android:layout_height="@dimen/dp_42"
              android:layout_marginTop="@dimen/dp_12"
              android:layout_marginBottom="@dimen/dp_12"
              android:layout_marginStart="@dimen/dp_20"
              android:src="@mipmap/favicon"/>
            <TextView
                android:id="@+id/sideslip_user_name"
                android:layout_toRightOf="@+id/sideslip_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:text="zhang"
                android:textSize="@dimen/font_size_large"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#dddddd" />
            <TextView
                android:layout_toRightOf="@+id/sideslip_user_icon"
                android:layout_below="@+id/sideslip_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:textSize="@dimen/font_size_large"
                android:text="1222222"
                android:layout_marginTop="@dimen/dp_3"
                android:textColor="#dddddd" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#393939"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="常见"
        android:textSize="@dimen/font_size_xlarge"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_35"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#393939"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/sideslip_btn_selected">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新优惠"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignLeft="@id/text1"
            android:background="#393939"
            android:layout_below="@+id/text1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sideslip_btn_selected">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助中心"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#393939"
        android:layout_below="@+id/text1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="设置"
        android:textSize="@dimen/font_size_xlarge"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_35"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#393939"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignLeft="@id/text2"
            android:background="#393939"
            android:layout_below="@+id/text2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页弹窗"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignLeft="@id/text3"
            android:background="#393939"
            android:layout_below="@+id/text3"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画特效"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#393939"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_35"
        android:background="#393939"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sideslip_btn_selected">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:textColor="#dddddd"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/font_size_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#393939"/>
</LinearLayout>
