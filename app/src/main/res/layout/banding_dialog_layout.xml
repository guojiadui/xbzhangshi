<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_rectangle_white">
<TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:background="@drawable/bg_banding_dialog_title"
    android:gravity="center"

    android:textSize="@dimen/font_size_large"/>
    
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginStart="@dimen/dp_25"
       android:layout_marginEnd="@dimen/dp_25">
       <TextView
           android:id="@+id/content_tip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:textSize="@dimen/font_size_large"
           android:layout_gravity="center_vertical"/>
       <EditText
           android:id="@+id/content"
           android:layout_width="@dimen/dp_170"
           android:layout_height="wrap_content"
           android:paddingTop="@dimen/dp_4"
           android:paddingBottom="@dimen/dp_4"
           android:paddingStart="@dimen/dp_3"
           android:paddingEnd="@dimen/dp_3"
           android:layout_marginTop="@dimen/dp_25"
           android:layout_marginBottom="@dimen/dp_25"
           android:background="@drawable/edit_bg_gray"
           android:layout_marginStart="@dimen/dp_15"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        >
        <TextView
            android:id="@+id/cancel_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_gray_selector"
            android:textSize="@dimen/font_size_large"
            android:paddingEnd="@dimen/dp_25"
            android:paddingStart="@dimen/dp_25"
            android:paddingBottom="@dimen/dp_7"
            android:paddingTop="@dimen/dp_7"
            android:text="取消"/>
        <TextView
            android:id="@+id/yes_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_red_selector"
            android:layout_marginStart="@dimen/dp_20"
            android:textColor="@color/white"
            android:paddingEnd="@dimen/dp_25"
            android:paddingStart="@dimen/dp_25"
            android:paddingBottom="@dimen/dp_7"
            android:paddingTop="@dimen/dp_7"
            android:textSize="@dimen/font_size_large"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>
